{
  "name": "typed-api-fetch",
  "version": "0.1.0",
  "description": "Generate a typed fetch method from a typescript definition",
  "main": "dist/index.js",
  "files": [
    "dist",
    "src"
  ],
  "private": false,
  "scripts": {
    "build": "tsc",
    "test": "jest --silent",
    "test:ci": "jest --silent --ci  --collectCoverage  --reporters=default --reporters=jest-junit",
    "lint": "eslint --ext .js,.ts src --max-warnings=0",
    "format": "prettier --write .",
    "prepeare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "29.4.0",
    "@typescript-eslint/eslint-plugin": "5.54.1",
    "@typescript-eslint/parser": "5.54.1",
    "eslint": "8.30.0",
    "eslint-config-prettier": "8.7.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "jest-junit": "15.0.0",
    "prettier": "2.8.4",
    "ts-jest": "29.0.3",
    "typescript": "4.9.5"
  },
  "jest": {
    "roots": [
      "src"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "clearMocks": true,
    "coverageThreshold": {
      "global": {
        "lines": 0
      }
    },
    "coverageDirectory": "./test_reports/coverage",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageReporters": [
      "html",
      "text",
      "text-summary",
      "cobertura"
    ]
  },
  "jest-junit": {
    "outputDirectory": "test_reports",
    "outputName": "result.xml"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
